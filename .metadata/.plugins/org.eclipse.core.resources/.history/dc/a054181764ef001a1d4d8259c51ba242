package String_Assignment;

import java.util.Scanner;

public class Assignment3 {

	public static void main(String[] args) {
		String s;
		Scanner input = new Scanner(System.in);
		String tense = "";
		
		System.out.println("Enter a sentence: ");
		s = input.nextLine();
		
		if (s.endsWith("?")) {
		String str[] = s.split(" ");
		for (int i=0; i<str.length; i++) {
			System.out.println(str[i]);
			if(str[i].equals("did") || str[i].equals("was") || str[i] == "were" || str[i] == "could") {
				System.out.println("ok");
				tense = "past";
			}
		}
		if(tense == "past") {
			System.out.println("This sentence is past tense.");
		}
		else {
			System.out.println("This sentence is present tense");
		}
		}
		else {
			System.out.println("This sentence is not question.");
		}
	}

}
